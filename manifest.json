{
  "manifest_version": 3,
  "name": "Web Accessibility Tester",
  "version": "1.0.0",
  "description": "检测网页无障碍合规问题的Chrome插件",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/utils.js",
        "lib/accessibility-checker.js",
        "lib/display-manager.js",
        "lib/visual-annotator.js",
        "content/detector.js",
        "content/content.js"
      ],
      "css": ["assets/styles/common.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Accessibility Tester"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}