{
  "manifest_version": 3,
  "name": "Web Accessibility Tester",
  "version": "1.0.0",
  "description": "检测网页无障碍合规问题的Chrome插件",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/detector.js",
        "content/annotator.js",
        "content/content.js"
      ],
      "css": ["content/annotations.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Accessibility Tester"
  }
}